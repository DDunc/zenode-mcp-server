{
  "name": "zenode-mcp-server",
  "version": "1.0.0",
  "description": "Node.js port+ of the Zen Model Context Protocol (MCP) server that orchestrates multiple AI models",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:mcp": "docker-compose up -d",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json,md}'",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "precommit": "npm run lint && npm run type-check && npm run test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "gemini",
    "openai",
    "openrouter",
    "code-analysis",
    "developer-tools"
  ],
  "author": "Zenode Team",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "glob": "^11.0.3",
    "openai": "^4.72.0",
    "redis": "^4.7.1",
    "tiktoken": "^1.0.17",
    "uuid": "^9.0.1",
    "winston": "^3.15.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/ui": "^3.2.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.8",
    "ts-jest": "^29.2.5",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vitest": "^3.2.3"
  }
}
